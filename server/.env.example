MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.gira6ng.mongodb.net/hostpenny?retryWrites=true&w=majority&appName=Cluster0
PORT=4000

# Email Configuration
ADMIN_EMAIL=hostpennyuk@gmail.com

# Option 1: Resend (Recommended for production - Professional email service)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=onboarding@resend.dev
